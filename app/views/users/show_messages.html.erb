<div class="row">
  <div class="col-md-8 col-md-push-4">
      <h3><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>メッセージ一覧</h3>
        <% @messages.each do |message| %>
        <div class="media">
            <% if message.post_user.image.present? %>
                <div class="media-left">
                <%= image_tag message.post_user.image.url, alt: message.post_user.name, size: "50x50" %>
                </div>
            <% else %>
                <div class="media-left">
                <%= image_tag "no_image.jpg", alt: message.post_user.name, size: "50x50"%>
                </div>
            <% end %>
            <div class="media-body">
                <h4 class="media-heading"><%= link_to message.post_user.name, user_path(message.post_user_id) %></h4>
                <%= message.message %><br>
                <span class="timestamp"><%= message.created_at %></span>
            </div>
        </div>
        <% end %>
        <%= paginate @messages %>
  </div>
  <%= render 'aside2' %>
</div>