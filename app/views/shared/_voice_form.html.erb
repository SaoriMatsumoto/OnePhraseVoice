<%= form_for(@voice) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
        <%= f.file_field :file, accept: 'audio/*' %>
        <p class="help-block">300KB以内のmp3ファイルを選択してください</p>
        <%= f.label :description, "ボイスの説明" %>
        <%= f.text_area :description, placeholder: "どんなボイス？", rows: '3' %>
        <%= f.label :tag_list, "タグ（カンマ区切り）" %>
        <%= text_field_tag 'voice[tag_list]', @voice.tag_list.join(',') %>
    </div>

    <%= f.submit "投稿する", class: "btn btn-default" %>
<% end %>
<div class="panel panel-default popular-tag">
  <div class="panel-heading">
    <h3 class="panel-title">人気のタグ</h3>
  </div>
  <div class="panel-body">
    <% ActsAsTaggableOn::Tag.most_used.each do |tag| %>
      <span class="label label-default"><%= link_to "#{tag}", taglist_path(tag: tag.name) %></span>
    <% end %>
  </div>
</div>
<%= search_form_for @q, url: search_path do |f| %>
  <%= f.label :description_cont, "ボイスを検索" %>
  <%= f.search_field :description_cont %>
  <%= f.submit %>
<% end %>